{% extends "admin/session/layout-session.njk" %}
{% block content %}
    <section class="password container form">
        <form method="POST" action="/admin/users/forgot-password">
            <div class="header">
                <h3>Esqueceu a senha?</h3>
            </div>
            <div class="fields">
                <div class="item">
                    <span>Email</span>
                    <div class="input">
                        <input type="email" name="email" placeholder="Digite o email cadastrado" value="{{ user.email }}" onblur="Validade.apply(this, 'isEmail')"/>
                    </div>
                </div>
                <button class="button" type="submit">Recuperar</button>
            </div>
        </form>
    </section>
{% endblock %}