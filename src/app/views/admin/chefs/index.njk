{% extends "admin/layout.njk" %}
{% block content %}
  <section class="head">
    <h3>Gerenciar chefs</h3>
    <a href="/admin/chefs/create">Novo chef</a>
  </section>
  <section class="chefs_cards">
    {% for chef in chefs %}
      <div class="chef_card">
        <div class="chef_card-image">
          <img src="{{ chef.src }}" alt="{{ chef.name }}"/>
        </div>
        <div>
          <div class="chef_name">
            <p>{{ chef.name }}</p>
          </div>
          <div class="button">
            <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
          </div>
        </div>
      </div>
    {% endfor %}
  </section>
{% endblock %}