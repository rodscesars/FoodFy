{% extends "admin/layout.njk" %}
{% block content %}
  <section>
    <div class="head">
      <h1>Chef: {{ chef.name }}</h1>
      <a href="/admin/chefs/{{ chef.id }}/edit" class="button">Editar Chef</a>
    </div>
    <div class="chef_image">
      <img src="{{ avatarFile.src }}" alt="{{ chef.name }}"></div>
      <div class="recipe_info">
        <p>{{ chef.name }}</p>
      </div>
      <div class="recipe_author">
        <p>{{ chef.total_recipes }} receitas</p>
      </div>
    </section>
    <section class="chef_recipes">
      <h1>Receitas</h1>
      <section class="cards">
        {% for recipe in recipeIndex %}
          <div class="card">
            <div class="card-image">
              {% for file in files %}
                {% if file.recipe_id == recipe.id %}
                  <img src="{{ file.src }}" alt="{{ file.name }}"/>
                {% endif %}
              {% endfor %}
            </div>
            <div class="card-info">
              <div class="card-title">
                <p>{{ recipe.title }}</p>
              </div>
              <div class="card-author">
                <p>por {{ chef.name }}</p>
              </div>
              <div class="button">
                <a href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </section>
    </section>
  {% endblock %}